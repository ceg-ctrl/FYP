rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match any document in the 'fds' collection
    match /fds/{fdID} {
      
      // 1. Create (Add New): 
      // User can create if they are logged in AND the data they are sending has their own auth ID
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // 2. Read, Update, Delete:
      // User can only do this if the existing document's 'userId' matches their own
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}